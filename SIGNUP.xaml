<Window x:Class="EmapaProyect.SIGNUP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmapaProyect"
        mc:Ignorable="d"
        Title="SIGNUP" Height="460" Width="450">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="/img/Gemini_Generated_Image_1os2q1os2q1os2q1.png"/>
        </Grid.Background>

       
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblNombRre"
               Grid.Row="1"
               Content="Nombre:"   
               Foreground="GreenYellow"
               Margin="5"/>
        <TextBox x:Name="txtNombre"
                 Grid.Row="1"
                 Grid.Column="1"
                 MaxLength="10" 
                 Margin="8"/>

        <Label x:Name="lblApPaterno"
               Grid.Row="2"
               Content="Ap.Paterno:" 
               Foreground="GreenYellow"/>
        <TextBox x:Name="txtPaterno"
                 Grid.Row="2"
                 Grid.Column="1"
                 MaxLength="10" 
                 Margin="8"/>

        <Label x:Name="lblApMaterno"
               Grid.Row="3"
               Content="Ap.Materno:"
               Foreground="GreenYellow"/>
        <TextBox x:Name="txtMaterno"
                 Grid.Row="3"
                 Grid.Column="1"
                 MaxLength="10"
                 Margin="8"/>

        <Label x:Name="lblEmail"
               Grid.Row="4"
               Content="E-mail:"
               Foreground="GreenYellow"
               Margin="0,0,0,39" 
               Grid.RowSpan="2"/>
        <TextBox x:Name="txtEmail"
                 Grid.Row="4"
                 Grid.Column="1"
                 Margin="8"/>

        <Label x:Name="lblCelular"
               Grid.Row="5"
               Content="Celular:"
               Foreground="GreenYellow"
               Margin="5,0,15,10"/>
        <TextBox x:Name="txtCelular"
                 Grid.Row="5"
                 Grid.Column="1"
                 MaxLength="10"
                 Margin="8"/>

        <Label x:Name="lblPassword"
               Grid.Row="6"
               Content="Contraseña:"
               Foreground="GreenYellow"/>
        <PasswordBox x:Name="pwdContra"
                     Grid.Row="6"
                     Grid.Column="1"
                     FontSize="20"
                     FontWeight="Bold"
                     Margin="10,5,10,10"/>

        <Button x:Name="btnLimpiar"
                Grid.Row="8" 
                Content="Limpiar"
                Click="btnLimpiar_Click"
                Margin="10"/>
        <Button x:Name="btnAceptar"
                Grid.Row="8"
                Grid.Column="1"
                Content="Aceptar"
                Click="btnAceptar_Click"
                Margin="10"/>

        <Label x:Name="lblMensajes"
               Grid.Row="7"
               FontSize="10"
               Grid.ColumnSpan="2"
               Foreground="Red"/>
    </Grid>
</Window>
