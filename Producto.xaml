<Window x:Class="EmapaProyect.ProductosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Productos" Height="500" Width="800" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="625*"/>
            <ColumnDefinition Width="167*"/>
        </Grid.ColumnDefinitions>


        <Grid.Background>
            <ImageBrush ImageSource="/img/Gemini_Generated_Image_1os2q1os2q1os2q1.png"/>
        </Grid.Background>
        <Label
            Content="selcciona los productos"
            FontSize="25"
            Foreground="White" Grid.ColumnSpan="2"
            />

        <ListView x:Name="lvProductos"
                  HorizontalAlignment="Left"
                  Width="400"
                  Height="300" 
                  Margin="10,84,0,85"
                  Background="Wheat" 
                  Opacity="0.8"
                  BorderBrush="Gray" 
                  BorderThickness="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Regresar" 
                                    Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Imagen}" 
                                       Width="50" 
                                       Height="50"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Producto" 
                                    DisplayMemberBinding="{Binding Nombre}"
                                    Width="100"/>
                    <GridViewColumn Header="Precio" 
                                    DisplayMemberBinding="{Binding Precio}"
                                    Width="50"/>
                    <GridViewColumn Header="Cantidad" 
                                    Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding CantidadSeleccionada}" Width="40"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>


        <ListView x:Name="lvCarrito"
                  HorizontalAlignment="Right" 
                  Width="350"
                  Height="300" 
                  Margin="0,84,10,85"
                  Background="Aqua" 
                  Opacity="0.8"
                  BorderBrush="Gray"
                  BorderThickness="1" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Producto"
                                    DisplayMemberBinding="{Binding Nombre}"
                                    Width="150"/>
                    <GridViewColumn Header="Cantidad"
                                    DisplayMemberBinding="{Binding CantidadSeleccionada}"
                                    Width="50"/>
                    <GridViewColumn Header="Precio" 
                                    DisplayMemberBinding="{Binding Precio}" 
                                    Width="50"/>

                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="btnfacturar"
            Content="Facturar" 
            
                VerticalAlignment="Bottom"
                Width="150" 
                Height="35" 
                Background="Blue" 
                Foreground="White" 
                FontWeight="Bold" 
                Margin="528,0,114,10" Grid.ColumnSpan="2"
                />

        <Button x:Name="btnAtras"
                Content="Volver Atras" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Width="150" Height="35" 
                Background="blue" 
                Foreground="White" 
                FontWeight="Bold" 
                
                Margin="103,0,372.171,10"/>

    </Grid>
</Window>